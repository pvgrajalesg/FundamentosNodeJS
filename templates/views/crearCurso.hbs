{{>header}}
<form action="/mensajeCurso" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Id: </label>
        <div class="col-sm-10">
            <input class="form-control" id="id" type="text" name="id" placeholder="Id Curso" required>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Nombre: </label>
        <div class="col-sm-10">
            <input class="form-control" id="nombre" type="text" name="nombreCurso" placeholder="Nombre del Curso" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputModalidad" class="col-sm-2 col-form-label">Modalidad:</label>
        <div class="col-sm-10">
            <select id="inputModalidad" name="modalidad" class="form-control">
                <option selected> - </option>
                <option>Virtual</option>
                <option>Presencial</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Valor: </label>
        <div class="col-sm-10">
            <input class="form-control" id="valor" type="number" name="valor" placeholder="Valor" required>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Descripci√≥n: </label>
        <div class="col-sm-10">
            <textarea class="form-control" id="descripcion" name="descripcion" required></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Intensidad Horaria: </label>
        <div class="col-sm-10">
            <input class="form-control" id="intensidad" type="number" name="intensidad" placeholder="Intensidad">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Crear Curso</button>
</form>

{{>footer}}